<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotkaMobile.Views.Feed.FeedDetailsPage"
             xmlns:viewmodel="clr-namespace:NotkaMobile.ViewModels.FeedVM"
             x:DataType="viewmodel:FeedDetailsViewModel">
    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, *" Padding="5">
            <Label Text="{Binding Name}"/>
            <Image Grid.Row="1" Source="{Binding PhotoSource}"/>
            <Label Grid.Row="2" Text="{Binding Description}"/>
        </Grid>
    </ScrollView>
</ContentPage>