<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotkaMobile.Views.Notes.NewNotePage"
             xmlns:viewmodel="clr-namespace:NotkaMobile.ViewModels.NoteVM"
             xmlns:model="clr-namespace:NotkaMobile.Service.Reference"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"  
             x:DataType="viewmodel:NewNoteViewModel"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:ItemTappedEventArgsConverter x:Key="ItemTappedEventArgsConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label 
                Text="Tytuł:"
                VerticalOptions="Center" 
                HorizontalTextAlignment="Start" />
            <Entry Text="{Binding NoteTitle}"/>
        </HorizontalStackLayout>
        <Grid Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0"
                   Text="Tagi:"
                   VerticalOptions="Center" 
                   HorizontalTextAlignment="Start" />
            <HorizontalStackLayout Grid.Column="1" Grid.Row="0">
                <Entry HorizontalOptions="Fill" Placeholder="Tag" Text="{Binding CurrentTag}"/>
                <Button HorizontalOptions="End" Text="+" Command="{Binding AddTagCommand}"/>
            </HorizontalStackLayout>
            <ListView Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" 
                      MaximumHeightRequest="200"
                      ItemsSource="{Binding PromptedTags}">
                <ListView.Behaviors>
                    <toolkit:EventToCommandBehavior EventName="ItemTapped"
                                                    Command="{Binding SelectTagCommand}" 
                                                    EventArgsConverter="{StaticResource ItemTappedEventArgsConverter}" />
                </ListView.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type model:Tag}">
                        <ViewCell>
                            <Frame Margin="1">
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="#"/>
                                            <Span Text="{Binding Name}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <CollectionView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3"
                            HorizontalOptions="StartAndExpand"
                            ItemsLayout="HorizontalList"
                            ItemsSource="{Binding SelectedTags}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type model:Tag}">
                        <HorizontalStackLayout Padding="1">
                            <Label Text="{Binding Name}"/>
                            <Button Text=" X " Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:NewNoteViewModel}}, Path=RemoveTagCommand}"
                                    CommandParameter="{Binding .}"/>
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Entry Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"
                   Placeholder="Treść notatki"/>
            <Button Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3"
                    Text="Dodaj notatkę"
                    Command="{Binding AddNoteCommand}"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>